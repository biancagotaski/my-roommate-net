<!-- CÓPIA DO INDEX DE ROOMS (ORIGINAL) -->

@model IEnumerable<MyRoommate.Domain.Model.Room>

    @{
    ViewBag.Title = "Index";
    }

    <h2>Quartos disponíveis</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <img src="@item.Photo" style="max-width:300px;height:auto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (item.PublisherId == ViewBag.UserId)
                {
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) <text>|</text>
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }) <text>|</text>
                }
                @Html.ActionLink("Mais detalhes", "Details", new { id = item.Id })

            </td>
        </tr>
        }

    </table>
